<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.zipaboutgui.ui.controller.VehiclesController">

    <!-- TOP BAR -->
    <top>
        <VBox spacing="8">
            <padding>
                <Insets top="10" right="16" bottom="10" left="16"/>
            </padding>

            <!-- Navigation + session row -->
            <HBox alignment="CENTER_LEFT">
                <Button text="Logout" onAction="#handleBack"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Label fx:id="sessionLabel"
                       style="-fx-font-size: 12px; -fx-text-fill: #555;" />
            </HBox>

            <!-- Title row -->
            <Label text="Vehicles"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"
                   alignment="CENTER"/>
        </VBox>
    </top>

    <!-- CENTER -->
    <center>
        <HBox spacing="16">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16"/>
            </padding>

            <!-- LEFT: VEHICLES TABLE -->
            <TableView fx:id="vehiclesTable" prefWidth="420">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="180"/>
                    <TableColumn fx:id="typeColumn" text="Type" prefWidth="140"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                </columns>
            </TableView>

            <!-- RIGHT: DETAILS PANEL -->
            <VBox spacing="12" prefWidth="260">

                <Label text="Vehicle Details"
                       style="-fx-font-size: 14px; -fx-font-weight: bold;" />

                <Label fx:id="idLabel" text="ID: -" />
                <Label fx:id="typeLabel" text="Type: -" />
                <Label fx:id="modelLabel" text="Model: -" />
                <Label fx:id="statusLabel" text="Status: -" />

                <Separator />

                <HBox spacing="10">
                    <Button fx:id="bookButton"
                            text="Book"
                            prefWidth="100"
                            onAction="#handleBook"/>

                    <Button fx:id="releaseButton"
                            text="Release"
                            prefWidth="100"
                            onAction="#handleRelease"/>
                </HBox>

                <Button text="My Rentals"
                        onAction="#handleMyRentals"
                        prefWidth="120" />

            </VBox>
        </HBox>
    </center>

</BorderPane>
