<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.zipaboutgui.ui.controller.AdminController">

    <!-- TOP BAR -->
    <top>
        <VBox spacing="8">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Back button row -->
            <HBox alignment="CENTER_LEFT">
                <Button text="â† Back" onAction="#handleBack"/>
            </HBox>

            <!-- Title row -->
            <Label text="Active Rentals"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        </VBox>
    </top>

    <!-- CENTER TABLE -->
    <center>
        <TableView fx:id="rentalsTable" prefWidth="660">

            <columns>
                <TableColumn fx:id="usernameColumn"
                             text="Username"
                             prefWidth="120"
                             resizable="false"/>

                <TableColumn fx:id="nameColumn"
                             text="Name"
                             prefWidth="140"
                             resizable="false"/>

                <TableColumn fx:id="typeColumn"
                             text="Type"
                             prefWidth="120"
                             resizable="false"/>

                <TableColumn fx:id="modelColumn"
                             text="Model"
                             prefWidth="140"
                             resizable="false"/>

                <TableColumn fx:id="startTimeColumn"
                             text="Start Time"
                             prefWidth="160"
                             resizable="false"/>

                <TableColumn fx:id="statusColumn"
                             text="Status"
                             prefWidth="100"
                             resizable="false"/>
            </columns>

        </TableView>
    </center>

</BorderPane>
