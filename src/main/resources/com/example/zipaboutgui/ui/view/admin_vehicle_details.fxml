<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.zipaboutgui.ui.controller.AdminVehicleDetailsController">

    <!-- Top bar -->
    <top>
        <HBox spacing="12" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button text="â† Back" onAction="#handleBack"/>

            <Label text="Vehicle Details"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="14">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <!-- Vehicle info -->
            <GridPane hgap="12" vgap="8">

                <Label text="Vehicle ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label fx:id="idLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Type:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Label fx:id="typeLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Model:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Label fx:id="modelLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Status:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <Label fx:id="statusLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            </GridPane>

            <Separator/>

            <!-- Active rental -->
            <Label text="Active Rental"
                   style="-fx-font-weight: bold;"/>

            <Label fx:id="activeRentalLabel"/>

            <Separator/>

            <!-- Past rentals -->
            <Label text="Past Rentals"
                   style="-fx-font-weight: bold;"/>

            <TableView fx:id="pastRentalsTable">
                <columns>
                    <TableColumn fx:id="userColumn" text="User" prefWidth="220"/>
                    <TableColumn fx:id="startColumn" text="Start Time" prefWidth="160"/>
                    <TableColumn fx:id="endColumn" text="End Time" prefWidth="160"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="120"/>
                </columns>
            </TableView>

        </VBox>
    </center>

</BorderPane>
