<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.zipaboutgui.ui.controller.AdminVehiclesController">

    <!-- Top bar -->
    <top>
        <HBox spacing="12" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button text="â† Back" onAction="#handleBack"/>

            <Label text="Manage Vehicles"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Center table -->
    <center>
        <TableView fx:id="vehiclesTable">
            <columns>
                <TableColumn fx:id="idColumn" text="Vehicle ID" prefWidth="160"/>
                <TableColumn fx:id="typeColumn" text="Type" prefWidth="140"/>
                <TableColumn fx:id="modelColumn" text="Model" prefWidth="160"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="120"/>
            </columns>
        </TableView>
    </center>

    <!-- Bottom actions -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button text="Add Vehicle"
                    onAction="#handleAddVehicle"/>

            <Button text="View Details"
                    onAction="#handleViewDetails"/>

        </HBox>
    </bottom>

</BorderPane>
